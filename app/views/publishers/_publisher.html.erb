<div class="job-box d-md-flex align-items-center justify-content-between mb-30">
    <div class="job-left my-4 d-md-flex align-items-center flex-wrap">

        <%= image_tag("https://robohash.org/sedexcepturifuga.png?size=300x300&set=set1", class: "img-holder mr-md-4 mb-md-0 mb-4 mx-auto mx-md-0 d-md-none d-lg-flex" ) %>

            <div class="job-content">
                <h5 class="text-md-left">
                    <%= publisher.name %>
                </h5>
                <ul class=" flex-wrap text-capitalize ff-open-sans">
                    <li class="mr-md-4">
                        <i class="zmdi zmdi-pin mr-2"></i>
                        <%= publisher.address %>
                    </li>
                    <li class="mr-md-4">
                        <i class="zmdi zmdi-email mr-2"></i>
                        <%= publisher.email %>
                    </li>
                    <li class="mr-md-4">
                        <i class="zmdi zmdi-book mr-2"></i>
                        <%= publisher.books.count %> <%=t("publishers.show.books")%>
                    </li>
                </ul>
            </div>
    </div>
    <div class="job-right my-4 flex-shrink-0">
        <%= link_to( t("authors.show.detail") , publisher_path(publisher), class: "btn d-block w-100 d-sm-inline-block btn-primary" ) %>
    </div>
</div>
