<tr>
  <td><%= transaction.id %></td>
  <td><%= transaction.user_name %></td>
  <td><%=link_to transaction.book_title, book_path(transaction.book) %></td>
  <td><%= transaction.borrow_date %></td>
  <td><%= transaction.expire_date %></td>
  <td><%= transaction.status %></td>
  <td><%= transaction.amount %></td>
  <td><%= transaction.updated_at %></td>
  <td>
  <% if transaction.pending? %>
    <%= form_with model: transaction, url: user_transaction_path(@user, transaction), method: :destroy do |form| %>
      <%= form.button t("admin.transaction.select.cancel"), class: "btn btn-danger" %>
    <% end %>
  <% end %>
  </td>
</tr>
