<div class="d-flex flex-row bd-highlight mb-3">
  <div id="like_form">
  <% if current_user.books.exists?(@book.id) %>
    <%= render "like_books/unlike" %>
  <% else %>
    <%= render "like_books/like" %>
  <% end %>
  </div>
  <div id="like_message" class="mt-4 px-4">
    <%= like_message(@book) %>
  </div>
</div>
