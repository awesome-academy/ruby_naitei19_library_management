<div class="job-box d-md-flex align-items-center justify-content-between mb-30">
    <div class="job-left my-4 d-md-flex align-items-center flex-wrap">
        <% if author.avatar.attached? %>
            <%= image_tag url_for(author.avatar), alt: author.name, class: "img-holder mr-md-4 mb-md-0 mb-4 mx-auto mx-md-0 d-md-none d-lg-flex" %>
        <% else %>
            <%= t("admin.author.no_avatar") %>
        <% end %>
        <div class="job-content">
            <h5 class="text-center text-md-left">
                <%= author.name %>
            </h5>
            <ul class=" flex-wrap text-capitalize ff-open-sans">
                <li class="mr-md-4">
                    <i class="zmdi zmdi-pin mr-2"></i>
                    <%= author.country %>
                </li>
                <li class="mr-md-4">
                    <i class="zmdi zmdi-book mr-2"></i>
                    <%= author.books.count %> <%= t("authors.show.books") %>
                </li>
                <li class="mr-md-4">
                    <i class="zmdi zmdi-time mr-2"></i>
                    <%= author.date_of_birth %>
                </li>
            </ul>
        </div>
    </div>
    <div class="job-right my-4 flex-shrink-0">
        <%= link_to( t("authors.show.detail") , author_path(author), class: "btn d-block w-100 d-sm-inline-block btn-primary" ) %>
    </div>
</div>
