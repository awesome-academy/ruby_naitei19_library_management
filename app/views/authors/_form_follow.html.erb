<% if followed? %>
  <%= link_to author_follow_path(@author.id,followed.id), data: { "turbo-method": :delete}, class: "btn-lg top-0 end-0" do %>
    <button type="button" class="btn btn-outline-danger" data-mdb-ripple-color="white" >
      <%= t("unfollow") %>
    </button>
  <% end %>
<% else %>
  <%= link_to author_follows_path(@author), data: { "turbo-method": :post}, class: "btn-lg top-0 end-0" do %>
    <button type="button" class="btn btn-outline-dark" data-mdb-ripple-color="white">
      <%= t("follow")%>
    </button>
  <% end %>
<% end %>
