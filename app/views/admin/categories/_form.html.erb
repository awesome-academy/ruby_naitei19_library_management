
<% if @category.new_record? %>
  <%= form_with(model: @category, url: admin_categories_path ) do |f| %>
    <%= render "shared/error_messages", object: f.object  %>
    <div class="form-group">
      <%= f.label :category_name, t("admin.category.name") %>
      <%= f.text_field :category_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit t("admin.book.button"), class: "btn btn-primary" %>
    </div>
  <% end %>
<% else %>
  <%= form_with(model: @category, url: admin_category_path(@category), method: :patch) do |f| %>
    <%= render "shared/error_messages", object: f.object  %>
    <div class="form-group">
      <%= f.label :category_name, t("admin.category.name") %>
      <%= f.text_field :category_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit t("admin.book.button"), class: "btn btn-primary" %>
    </div>
  <% end %>
<% end %>
