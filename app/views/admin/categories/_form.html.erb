<%=  form_for [:admin, @category] do |f| %>
  <%= render "shared/error_messages", object: f.object  %>
  <div class="form-group">
    <%= f.label :category_name, t("admin.category.name") %>
    <span class="text-danger"><%= display_errors_for(@category, :category_name) %></span>
    <%= f.text_field :category_name, class: "form-control", placeholder: t("admin.category.name_holder")  %>
  </div>

  <div class="form-group">
    <%= f.submit t("admin.book.button"), class: "btn btn-primary" %>
  </div>
<% end %>
