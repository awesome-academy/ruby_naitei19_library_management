<% provide(:title, t("admin.header.user")) %>
<div id="layoutSidenav_content">
  <main>
    <div class="container-fluid px-4">
        <h1 class="mt-4"><%= t("admin.header.user")%></h1>
        <div class="card mb-4">
          <div class="card-header">
              <i class="fas fa-table me-1"></i>
              <%= t("admin.header.user")%> <%= t("admin.db") %>
          </div>
          <div class="card-body">
            <div class="search-box">
              <%= form_tag admin_users_path, method: :get do %>
                <%= text_field_tag :user_search, params[:user_search], placeholder: t("admin.user.search_placeholder"), class: "form-control" %>
                <%= submit_tag t("admin.user.search_button"), class: "btn btn-primary" %>
              <% end %>
            </div>
            <table class="table table-bordered">
              <thead >
                <tr>
                  <th><%= t("admin.user.name") %></th>
                  <th><%= t("admin.user.email") %></th>
                  <th><%= t("admin.user.gender") %></th>
                  <th><%= t("admin.user.date_of_birth") %></th>
                  <th><%= t("admin.user.address") %></th>
                  <th><%= t("admin.user.activate") %></th>
                </tr>
              </thead>
              <tbody>
                <%= render partial: "user", collection: @users %>
              </tbody>
            </table>
          </div>
          <div class="d-flex justify-content-center align-items-center mt-5">
            <div class="digg_pagination">
                <%= will_paginate @users%>
            </div>
          </div>
        </div>
    </div>
  </main>
</div>
