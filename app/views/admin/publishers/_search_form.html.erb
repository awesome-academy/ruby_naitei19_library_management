<%= search_form_for @search, url: admin_publishers_path,  html: { class: "search-form" } do |f| %>
  <div class="form-group">
    <%= f.label :name_cont, t("admin.publisher.search_by_name") %>
    <%= f.search_field :name_cont, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :email_cont, t("admin.publisher.search_by_email") %>
    <%= f.search_field :email_cont, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :address_cont, t("admin.publisher.search_by_address") %>
    <%= f.search_field :address_cont, class: "form-control" %>
  </div>
  <%= f.submit t("admin.search_button"), class: "btn btn-primary" %>
<% end %>
