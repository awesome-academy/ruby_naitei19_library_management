<%= search_form_for @search, url: admin_authors_path,  html: { class: "search-form" } do |f| %>
  <div class="form-group">
    <%= f.label :name_cont, t("admin.author.search_by_name") %>
    <%= f.search_field :name_cont, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :country_cont, t("admin.publisher.search_by_country") %>
    <%= f.search_field :country_cont, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :date_of_birth_gteq, t("admin.author.search_by_dob_from") %>
    <%= f.date_field :date_of_birth_gteq, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :date_of_birth_lteq, t("admin.author.search_by_dob_to") %>
    <%= f.date_field :date_of_birth_lteq, class: "form-control" %>
  </div>
  <%= f.submit t("admin.search_button"), class: "btn btn-primary" %>
<% end %>
