<tr>
  <td><%= book.title %></td>
  <td>
    <% if book.images.any? %>
      <%= image_tag book.images.first.image, alt: book.title, class: "book-image" %>
    <% else %>
      <%= t("admin.book.no_image") %>
    <% end %>
  </td>

  <td>
    <% book.categories.each do |category| %>
      <%= category.category_name %><br>
    <% end %>
  </td>
  <td><%= book.published_year %></td>
  <td><%= book.book_amount %></td>
  <td><%= book.publisher_name %></td>
  <td>
    <% book.authors.each do |author| %>
      <%= author.name %><br>
    <% end %>
  </td>
  <td>
    <% if book.average_rating.zero? %>
      <%= t("admin.book.no_review") %>
    <% else %>
      <%= book.average_rating %>
    <% end %>
  </td>
  <td>
    <%= link_to admin_book_path(book) do %>
      <i class="fas fa-eye "></i>
    <% end %>
    <span class="mx-2"></span>
    <%= link_to edit_admin_book_path(book) do %>
      <i class="fas fa-edit"></i>
    <% end %>
    <span class="mx-2"></span>
    <%= link_to  admin_book_path(book), data: { "turbo-method": :delete,
                                           turbo_confirm: t("admin.delete") } do %>
      <i class="fas fa-trash"></i>
    <% end %>
  </td>
</tr>
